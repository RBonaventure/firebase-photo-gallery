{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "index"
      }
    ],
    "redirects": [ {
      "source" : "/admin",
      "destination" : "/admin.html",
      "type" : 301
    }, {
      "source" : "/login",
      "destination" : "/login.html",
      "type" : 301
    } ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "predeploy": "npm --prefix $RESOURCE_DIR run build"
  }
}
